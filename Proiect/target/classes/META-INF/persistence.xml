<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="primary">
        <provider>org.hibernate.ogm.jpa.HibernateOgmPersistence</provider>
        <properties>
            <property name="hibernate.ogm.datastore.provider" value="neo4j_bolt"/>
            <property name="hibernate.ogm.datastore.host" value="127.0.0.1:7687"/>
            <property name="hibernate.ogm.datastore.username" value="neo4j"/>
            <property name="hibernate.ogm.datastore.password" value="student"/>
        </properties>
    </persistence-unit>
</persistence>
